<div class="hero-unit">
	<p id="notice"><%= notice %></p>

	<h3><%= @memo.name %></h3>
	<hr/>
	<span class="btn-group">
		<%= link_to 'Edit', edit_memo_path(@memo), class: "btn" %>
		<%= link_to 'Back', memos_path, class: "btn" %>
		</span>
	<span class="btn-group">
		<%= link_to 'Toggle hints', '#', id: "btn-hints", class: "btn"%>
		<%= link_to 'Toggle word list', '#', id: "btn-words", class: "btn"%>
		<%= link_to 'Revise', '#', id: "btn-revise", class: "btn btn-primary btn-bold"%>
	</span>
	<hr/>
	
	<div class="row">
		<div id="box-hints" class="span4">
			<p><b>Hints</b></p>
	  	<div class="word-box"> <%= show_hints %> </div>
		</div>
		<div id="box-words" class ="span3">
	  	<p><b>Ordliste</b></p>
	  	<div class="word-box"><%= show_word_list %></div>
		</div>
	</div>
	<hr/>
	<div class="row">
		<div class="span10">
			<span class="btn-group">
				<%= link_to 'Edit', edit_memo_path(@memo), class: "btn" %>
				<%= link_to 'Back', memos_path, class: "btn" %>
			</span>
		</div>
	</div>
</div>