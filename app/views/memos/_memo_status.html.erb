<p><strong><%= @memo.name %></strong></p>
<div class="pull-left">
	<% if @memo.practice_disabled %>
		<p>Word count: </p>
	<% else %>
		<p>Health: </p>
		<p>Word count: </p>
		<p>Practice count: &nbsp; </p>
		<p>Best time: </p>
	<% end %>
</div>
<% if @memo.practice_disabled %>
	<p><strong><%= @memo.word_list.split.count %></strong></p>
<% else %>
	<p><strong><%= show_health %></strong></p>
	<p><strong><%= @memo.word_list.split.count %></strong></p>
	<p><strong><%= @memo.num_practices %></strong></p>
	<p><strong><%= if @memo.best_time then "#{@memo.best_time} s" else "n/a" end %></strong></p>
<% end %>
<hr/>