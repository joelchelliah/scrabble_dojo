<% provide(:title, 'Word search') %>
<div id="word-entries-search" class="hero-unit">
  <h1>Words</h1>
  <h2>Search</h2>
  <hr/>
  <div class="row">
    <div class="span11 center">
    	<p> Enter a word, or sequence of letters to find all possible anagrams.</p>
    	<p>A maximum of two blank tiles may be used, denoted by a blank <strong>space</strong>, or a <strong>period</strong>.</p>
			<%= form_tag("/search", method: "get") do %>
			  <%= text_field_tag(:word, @word, placeholder: ". . .") %>
        <%= submit_tag "Search", class: "hide-off-screen" %>
			<% end %>
		</div>
	</div>
	<% unless @word.blank? %>
		<div class="row">
	    <div class="span11 center">
	    	<hr/>
	    	<p> Found <%= pluralize(@word_entries.length, "anagram") %> for <strong><%= @word %></strong> </p>
	    	<div class="results">
		    	<% @word_entries.each do |word_entry| %>
		    		<% if @word == word_entry.word %>
		    			<p class="text-success"><strong> <%= word_entry.word %> </strong></p>
		    		<% else %>
		    			<p><strong> <%= word_entry.word %> </strong></p>
		    		<% end %>
		    	<% end %>
		    </div>
	    </div>
	  </div>
	<% end %>
</div>